---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import PostList from "../../components/PostList.astro";


const allPosts = await getCollection("posts");
---

<Layout description='My music blog' title="Music Reviews">
    <main class="flex justify-center bg-white dark:bg-black min-h-screen">
        <div class="flex flex-col p-8 max-w-[1000px] w-full">
            <h1 class="text-4xl font-bold text-black dark:text-white">All posts</h1>
            <PostList posts={allPosts} client:load />
        </div>
    </main>
</Layout>
